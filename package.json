{
  "name": "ride-my-way",
  "version": "1.0.0",
  "description": "A carpooling application that provides drivers with the ability to create ride offers and passengers to join available ride offers.",
  "main": "app.js",
  "scripts": {
    "test": "NODE_ENV=TEST nyc mocha --require babel-core/register server/test/*.js",
    "build": "npm run clean && babel server -d dist",
    "clean": "rm -r dist && mkdir dist",
    "start": "nodemon --exec babel-node app.js",
    "create-table-dev": "npm run create-users-table && npm run create-rides-table && npm run create-request-table --exit",
    "create-users-table": "NODE_ENV=development babel-node ./server/models/users.js --exit",
    "create-rides-table": "NODE_ENV=development babel-node ./server/models/rides.js --exit",
    "create-request-table": "NODE_ENV=development babel-node ./server/models/request.js --exit",
    "dev": "NODE_ENV=DEVELOPMENT nodemon --exec babel-node app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kleva-j/Ride-My-Way.git"
  },
  "keywords": [
    "Ride-My-Way",
    "Drivers",
    "Passengers"
  ],
  "author": "Michael Obasi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kleva-j/Ride-My-Way/issues"
  },
  "homepage": "https://github.com/kleva-j/Ride-My-Way#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coffeescript": "^2.3.1",
    "cors": "^2.8.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "istanbul": "^0.4.5",
    "jsend": "^1.0.2",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "nyc": "^12.0.2"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "lodash": "^4.17.10",
    "nodemon": "^1.17.5",
    "pg": "^7.4.3",
    "sinon": "^6.3.3",
    "uuid": "^3.3.2",
    "validator": "^10.4.0"
  }
}
